{
    "name": "Ubuntu",
    "image": "mcr.microsoft.com/vscode/devcontainers/java:latest",

    // Configure tool-specific properties.
	"customizations": {
		"vscode": {
            "extensions": [
                "vscjava.vscode-java-pack"
            ],
            "settings": {
                "java.home": "/usr/local/sdkman/candidates/java/current"
            }
	    }
    },

    "forwardPorts": [],
    "postCreateCommand": "java -version",
    "remoteUser": "vscode"
}
